<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:SearchBooksApp.Views"
             x:Class="SearchBooksApp.AccountPage" x:Name="accountPage">
    <Shell.TitleView>
        <Label BindingContext="{x:Reference accountPage}" FontFamily="HDR" Text="{Binding Path=Title}" TextColor="Black" FontSize="Large" FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
    </Shell.TitleView>
</ContentPage>